  provider          String   // "outlook"
  status            String   // "processing" | "completed" | "failed"

  startedAt         DateTime @default(now())
  endedAt           DateTime?

  emailsProcessed   Int      @default(0)
  agentsDiscovered  Int      @default(0)
  shipmentsExtracted Int     @default(0)

